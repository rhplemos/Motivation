<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="@color/purple">

        <ImageView
            android:src="@drawable/ic_all_inclusive"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/ic_happy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

        <ImageView
            android:src="@drawable/ic_sunny"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/cabin"
        android:text="OlÃ¡, Kotlin!"
        android:layout_below="@id/linear_menu"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_phrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:gravity="center"
        android:text="@string/app_name" />

    <View
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_below="@id/text_phrase"
        android:layout_centerHorizontal="true"
        android:background="@color/black"
        android:backgroundTint="@color/dark_purple"
        android:elevation="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:text="@string/new_phrase" />


</RelativeLayout>